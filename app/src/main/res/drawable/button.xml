<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#00FFD0" />
            <gradient android:angle="-90" android:startColor="#00BCD4" android:endColor="#0042FF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2F7366" />
            <solid android:color="#00CAAA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8BDDCE" />
            <gradient android:angle="-90" android:startColor="#09FF9C" android:endColor="#006555" />
        </shape>
    </item>
</selector>