<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentBaba">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_bro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kardes"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

        <ImageView
            android:id="@+id/userBro_photo"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/user_bro"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_account_circle_24"/>



        <TextView
            android:id="@+id/user_BroPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="+77071481094"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/userBro_photo"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_call3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Call"/>

            <Button
                android:id="@+id/btn_sms3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/button"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="SMS"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_below="@id/user_BroPhone"/>

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_camera_24"/>

    </RelativeLayout>

</FrameLayout>